@model Category
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<section class="contact py-lg-5 py-md-4 py-md-3 py-2">
    <div class="container py-lg-5 py-md-4 py-md-3 py-2">
        <div class="w3_mg">
            <h3>Chi tiết loại công việc @Model.CategoryName</h3>

        </div>
        <div class="p-4 border rounded" style="font-size: 1.2em">

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CategoryName"></label>
                </div>
                <div class="col-10">
                    <input asp-for="CategoryName" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="col-2">
                    <label asp-for="MetaTitle"></label>
                </div>
                <div class="col-10">
                    <input asp-for="MetaTitle" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="col-2">
                    <label asp-for="SEOTitle"></label>
                </div>
                <div class="col-10">
                    <input asp-for="SEOTitle" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="col-2">
                    <label asp-for="CreatedDate"></label>
                </div>
                <div class="col-10">
                    <input asp-for="CreatedDate" class="form-control" id="created" type="datetime" readonly value="@Model.CreatedDate.ToString("G")" />
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="col-2">
                    <label asp-for="ModifiedDate"></label>
                </div>
                <div class="col-10">
                    <input asp-for="ModifiedDate" class="form-control" id="modified" readonly type="datetime" value="@Model.ModifiedDate.ToString("G")" />
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="col-2">
                    <label asp-for="MetaKeyword"></label>
                </div>
                <div class="col-10">
                    <input asp-for="MetaKeyword" class="form-control" readonly/>
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-2">
                    <label asp-for="MetaDescription"></label>
                </div>
                <div class="col-10">
                    <textarea id="summernote" asp-for="MetaDescription" class="form-control" readonly></textarea>
                </div>
            </div>
            <div class="form-group offset-3">
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Cập nhật lại</a>
                <a asp-action="Index" class="btn btn-success">Back To List</a>
            </div>
        </div>

    </div>
</section>
@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {

            $('#summernote').summernote();

        });
    </script>
}

