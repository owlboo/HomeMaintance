@model HumanResources
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}


<section class="contact py-lg-5 py-md-4 py-md-3 py-2">
    <div class="container py-lg-5 py-md-4 py-md-3 py-2">
        <div class="w3_mg">
            <h3>Chi tiết nhân công</h3>

        </div>
        <div class="p-4 border rounded">
            <div class="form-group row mt-2">
                <div class="col-2">
                    <label asp-for="PersonName"></label>
                </div>
                <div class="col-10">
                    <input asp-for="PersonName" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="col-2">
                    <label asp-for="PersonName"></label>
                </div>
                <div class="col-10">
                    <img src="~/images/HumanImages/@Model.Avatar" width="200" height="200" />
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="col-2">
                    <label asp-for="ExperienceYears"></label>
                </div>
                <div class="col-10">
                    <input asp-for="ExperienceYears" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="col-2">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-10">
                    <input asp-for="PhoneNumber" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="col-2">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-10">
                    <input asp-for="Address" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="col-2">
                    <label asp-for="Role"></label>
                </div>
                <div class="col-10">
                    <input asp-for="Role" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-2">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-10">
                    <textarea id="summernote" asp-for="Description" class="form-control" readonly></textarea>
                </div>
            </div>
            <div class="form-group offset-8">
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Cập nhật lại</a>
                <a asp-action="Index" class="btn btn-success">Back To List</a>
            </div>
        </div>

    </div>
</section>
@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {

            $('#summernote').summernote('disable');

        });
    </script>
}


