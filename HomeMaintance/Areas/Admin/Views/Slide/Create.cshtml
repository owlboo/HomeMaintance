@model Slide
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<section class="contact py-lg-5 py-md-4 py-md-3 py-2">
    <div class="container py-lg-5 py-md-4 py-md-3 py-2">
        <div class="w3_mg">
            <h3>Thêm Slide</h3>

        </div>
        <form method="post" asp-action="Create" style="font-size: 1.2em" enctype="multipart/form-data">
            <div class="p-4 border rounded">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="table-danger"></span>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-2">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Image" type="file" name="files" class="form-control" />
                    </div>
                    <span asp-validation-for="Image" class="table-danger"></span>
                </div>
                <div class="form-group offset-3">
                    <input type="submit" class="btn btn-primary" value="Create" />
                    <a asp-action="Index" class="btn btn-success">Back To List</a>
                </div>
            </div>
        </form>

    </div>
</section>
@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

