            </div>
            <div class="col-md-6 col-sm-12 w3_ms3">
                <!-- Slideshow container -->
                <div class="slideshow-container">
                    @foreach (var item in @Model.HumanResources)
                    {
                        <div class="mySlides" style="background-color:aliceblue">
                            <a asp-area="Customer" asp-controller="HumanResourcesDetails" asp-action="Index" asp-route-id="@item.Id"><img src="~/images/HumanImages/@item.Avatar" alt="xyt" class="rounded-circle img-fluid" style="width:150px; height:150px;"></a>
