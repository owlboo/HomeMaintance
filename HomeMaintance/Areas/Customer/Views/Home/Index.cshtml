<section class="bannerbottom py-lg-5 py-md-4 py-md-3 py-2">
    <div class="bannerbottom py-lg-5 py-md-4 py-md-3 py-2">
        <div class="container">
            <div class="row">
                @foreach (var item in Model.Services)
                {
                    <div class="col-md-4 col-sm-12 w3_ban1">
                        <div class="card">
                            <img class="card-img-top" src="~/images/ServiceImages/@item.Thumbnail" style="height:200px;" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@item.ServiceName</h5>
                                <p class="card-text" style="height:100px;">@item.ShortDescription</p>
                                <a asp-action="Index" asp-controller="ServiceDetails" asp-route-id="@item.Id" class="btn btn-primary">Explore</a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
