@model System.Collections.Generic.ICollection<HomeMaintance.Models.Slide>

<div class="w3_banner_info">
    <div class="slider">
        <div class="callbacks_container">
            <div id="demo" class="carousel slide" data-ride="carousel">

                <!-- Indicators -->
                <ul class="carousel-indicators">
                    @for (int i = 0; i < @Model.Count; i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#demo" data-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#demo" data-slide-to="@i"></li>
                        }
                    }
                </ul>
                <!-- The slideshow -->
                <div class="carousel-inner">
                    @for (int i = 0; i < @Model.Count; i++)
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item active">
                                <img src="~/images/SlideImages/@Model.ElementAt(i).Image" alt="Los Angeles" style="width: 100%; height: 100%">
                                <div class="carousel-caption text">
                                    <h3>@Model.ElementAt(i).Name</h3>
                                    <p class="word wisteria">Sự an toàn và hài lòng của bạn là động lực cho chúng tôi</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="~/images/SlideImages/@Model.ElementAt(i).Image" alt="Los Angeles"  style="width: 100%; height: 100%">
                                <div class="carousel-caption text">
                                    <h3>@Model.ElementAt(i).Name</h3>
                                    <p class="word wisteria">Sự an toàn và hài lòng của bạn là động lực cho chúng tôi</p>
                                </div>
                            </div>
                        }
                    }

