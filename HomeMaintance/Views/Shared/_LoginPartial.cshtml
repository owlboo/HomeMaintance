@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li style="padding-top: 5px; padding-right: 10px;">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" 
                   title="Manage" style="padding-top:15px; color: white">Hello @UserManager.GetUserName(User)!  </a>
            </li>
            <li>
                <button type="submit" class="btn btn-danger navbar-btn">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Login"class="btn btn-danger">Login</a></li>
    </ul>
}